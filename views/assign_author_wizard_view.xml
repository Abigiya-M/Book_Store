<odoo>
    <record id="view_assign_author_wizard_form" model="ir.ui.view">
        <field name="name">assign.author.wizard.form</field>
        <field name="model">assign.author.wizard</field>
        <field name="arch" type="xml">
            <form string="Assign Author to Books">
                <group>
                    <field name="author_id"/>
                    <field name="book_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button string="Assign" type="object" name="action_assign_author" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_assign_author_wizard" model="ir.actions.act_window">
        <field name="name">Assign Author</field>
        <field name="res_model">assign.author.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
